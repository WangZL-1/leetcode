class Solution {
public:
    string reverseOnlyLetters(string s) {
        for(int i=0, j=s.length()-1; i<s.length() && j>-1 && i < j;){
            if(isAlphabet(s[i]) && isAlphabet(s[j])){
                char tmp = s[i];
                s[i++] = s[j];
                s[j--] = tmp;
            }
            else{
                if(!isAlphabet(s[i])) i++;
                if(!isAlphabet(s[j])) j--;
            }

        }
        return s;
    }
    bool isAlphabet(char c){
        return (c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z');
    }
};
